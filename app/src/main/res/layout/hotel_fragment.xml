<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RadioGroup
        android:layout_marginTop="16dp"
        android:id="@+id/rg_insideFlight_radioGroup"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:fontFamily="@font/font"
            android:layout_marginRight="16dp"
            android:id="@+id/rd_insideFlight_two"
            android:text="دو طرفه"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioButton
            android:fontFamily="@font/font"
            android:checked="true"
            android:layout_marginLeft="16dp"
            android:id="@+id/rd_insideFlight_one"
            android:text="یک طرفه"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RadioGroup>

    <TextView
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/font"
        android:drawableRight="@drawable/ic_location_on_black_24dp"
        android:gravity="center"
        android:hint="شهر مقصد"
        android:id="@+id/edt_hotel_destination"
        android:layout_below="@id/rg_insideFlight_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:id="@+id/v_insideFlight_line2"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_gray200"
        android:layout_below="@id/edt_hotel_destination"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:textSize="16sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/font"
        android:drawableRight="@drawable/ic_date_range_black_24dp"
        android:gravity="center"
        android:hint="تاریخ اقامت"
        android:layout_below="@id/v_insideFlight_line2"
        android:id="@+id/edt_hotel_date"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/v_insideFlight_line3"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_gray200"
        android:layout_below="@id/edt_insideFlight_date"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <Button
        android:id="@+id/btn_hotel_search"
        android:textSize="18sp"
        android:textColor="@color/color_white"
        android:fontFamily="@font/font"
        android:text="جستجو"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_search_style"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>